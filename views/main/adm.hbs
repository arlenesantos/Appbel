    <!-- CKEditor -->
    <script src="/ckeditor/ckeditor.js"></script>
    
    

    <title>Appbel</title>

</head>

<body>
    <header class="navbar navbar-expand-md navbar-light bg-light fixed-top">
        <nav class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="img\logo-removebg.png" alt="logo" style="width: 40%;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul id="ul-admin" class="navbar-nav flex-row flex-wrap ms-md-auto">
                    <li class="nav-item">
                        <a id="adminprodutos" class="nav-link active" aria-current="page"
                            href="/admin-produtos">Produtos</a>
                    </li>
                    <li class="nav-item">
                        <a id="adminparceiros" class="nav-link" href="/admin-parceiros">Parceiros</a>
