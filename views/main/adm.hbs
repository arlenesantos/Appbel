                    <li class="nav-item">
                        <a id="admincontatos" class="nav-link" href="/admin-contatos">Contatos</a>
                    </li>
                    <li class="nav-item">
                        <a id="adminblog" class="nav-link" href="/admin-blog">Blog</a>
                    </li>
                    <!--
                    <li class="nav-item">
                        <a id="logout" class="nav-link" href="/login">Sair</a>
                    </li> -->
                    {{#if logged}}
                    <li class="nav-item">
                        <a id="logout" class="nav-link" href="/login">Sair</a>
                    </li>
                    {{/if}}
                </ul>
            </div>
        </nav>
    </header>
    <main>
        {{{ body }}}
    </main>



    <footer class="align-items-center border-top w-100 text-center">
        <div>
            <ul class="redes-sociais text-center">
                <li><a href="#"><i class="fab fa-facebook text-success"></i></a></li>
